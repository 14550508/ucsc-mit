<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="1.7" type="template" client="site">
	<name>jm-business-marketing</name>
	<creationDate>10/10/2011</creationDate>
	<author>joomla-monster.com</author>
	<authorEmail>joomla-monster@design-joomla.eu</authorEmail>
	<authorUrl>joomla-monster.com</authorUrl>
	<copyright>Copyright (C) 2005 - 2011 Open Source Matters, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.7.0</version>
	<description><![CDATA[
	<head>
		<style>
			body {
				font-family:Arial, Helvetica, sans-serif;
				font-size:11px;
			}
			a:link,
			a:visited {
				color:#4991c1;
				font-weight:bold;
			}
			a:hover {
				text-decoration:underline;
			}
			h2 {
				color:#fa9539;
				text-transform:uppercase;
				font-size:16px;
				padding:0;
				margin:2px 0;
			}
			p {
				padding:0;
				margin:4px 0;
			}
			#left-logo {
				float:left;
				width: 320px;
				height:100px;
				display:block;
				padding-top:50px;
			}
			#right-text {
				float:left;
				width:400px;
			}
			#info {
				border:1px solid #efefef;
				padding:10px;
				background:#ffffff;
			}
			#info p {
				font-size:10px;
			}
		</style>
	</head>
	<body>
		<div id="left-logo">
			<img src="http://joomla-monster.com/images/jm-logo.png" />
		</div>
		<div id="right-text">
			<h2>Template jm-business-marketing</h2>
			<p><b>Templates for Joomla! CMS</b></p>
			<div id="info">
				<p><b>Version:</b> 1.7</p>
				<p><b>Date:</b> October 2011</p>
				<p><b>Client:</b> Random</p>
			</div>
			<p>
			Unique and oryginal templates for <b>Joomla! CMS</b> <br />
			Graphic design & template code: <b>design-joomla.eu</b> <br /><a href="http://www.design-joomla.eu">http://www.design-joomla.eu</a><br /><br />
			</p>
		</div>
	</body>
	]]></description>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>lib</folder>
		<folder>language</folder>
	</files>
	<positions>
		<position>bottom</position>
		<position>breadcrumbsload</position>
		<position>copyrights</position>
		<position>dj-menu-top</position>
		<position>header</position>
		<position>position-0</position>
		<position>position-7</position>
		<position>rightload</position>
	</positions>
	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_jm-business-marketing.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_jm-business-marketing.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="logo" type="media" hide_default="1" label="TPL_JM-BUSINESS-MARKETING_FIELD_LOGO_LABEL" description="TPL_JM-BUSINESS-MARKETING_FIELD_LOGO_DESC" />
				<field name="sitetitle"  type="text" default="" label="TPL_JM-BUSINESS-MARKETING_FIELD_SITETITLE_LABEL" description="TPL_JM-BUSINESS-MARKETING_FIELD_SITETITLE_DESC" filter="string" />
				<field name="sitedescription"  type="text" default="" label="TPL_JM-BUSINESS-MARKETING_FIELD_DESCRIPTION_LABEL" description="TPL_JM-BUSINESS-MARKETING_FIELD_DESCRIPTION_DESC" filter="string" />
				<field name="stylearea" type="list" default="1" label="TPL_JM-BUSINESS-MARKETING_FIELD_STYLEAREA_LABEL" description="TPL_JM-BUSINESS-MARKETING_FIELD_STYLEAREA_DESC">
				    <option value="1">Enabled</option>
				    <option value="0">Disabled</option>
			    </field>   
			    <field name="template_color" type="list" default="1" label="TPL_JM-BUSINESS-MARKETING_FIELD_TEMPLATECOLOR_LABEL" description="TPL_JM-BUSINESS-MARKETING_FIELD_TEMPLATECOLOR_DESC">
		            <option value="1">Orange</option>
		            <option value="2">Red</option>
		            <option value="3">Blue</option>
					<option value="4">Green</option>
			     </field>
				<field name="page_width" type="text" default="900px" label="TPL_JM-BUSINESS-MARKETING_FIELD_PAGEWIDTH_LABEL" description="TPL_JM-BUSINESS-MARKETING_FIELD_PAGEWIDTH_DESC" />
    			<field name="left_width" type="text" default="200px" label="TPL_JM-BUSINESS-MARKETING_FIELD_LEFTWIDTH_LABEL" description="TPL_JM-BUSINESS-MARKETING_FIELD_LEFTWIDTH_DESC" />
				<field name="right_width" type="text" default="200px" label="TPL_JM-BUSINESS-MARKETING_FIELD_RIGHTWIDTH_LABEL" description="TPL_JM-BUSINESS-MARKETING_FIELD_RIGHTWIDTH_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>